<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>GeoPost</name>
    <description>
        Geolocation based social network.
    </description>
    <author email="carlo.cassanelli@studenti.unimi.it">
        Carlo Cassanelli
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="https://ewserver.di.unimi.it/mobicomp/geopost/" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
